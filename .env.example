# =============================================================================
# Table 1837 Tavern - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...
SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9...

# =============================================================================
# AUTHENTICATION CONFIGURATION (Required)
# =============================================================================
# Generate a secure random string for JWT secret
# Use: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# =============================================================================
# OCR INTEGRATION (Required)
# =============================================================================
# FluxImagen API credentials for menu image processing
FLUX_IMAGEN_API_KEY=your_flux_imagen_api_key_here
FLUX_IMAGEN_ENDPOINT=https://api.flux-imagen.com/v1/ocr

# =============================================================================
# MONITORING & ALERTS (Required for Production)
# =============================================================================
# Webhook URL for system alerts (Slack, Discord, Teams, etc.)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Webhook for deployment notifications
DEPLOY_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/DEPLOY/WEBHOOK

# =============================================================================
# OPTIONAL PERFORMANCE SETTINGS
# =============================================================================
# Redis for caching (optional but recommended for production)
REDIS_URL=redis://localhost:6379

# Server configuration
NODE_ENV=development
PORT=3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# =============================================================================
# CLIENT-SIDE CONFIGURATION
# =============================================================================
# Client environment variables (prefix with VITE_)
VITE_API_URL=http://localhost:3001/api
VITE_APP_NAME=Table 1837 Tavern
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# PRODUCTION-SPECIFIC SETTINGS
# =============================================================================
# Vercel deployment settings
VERCEL_TOKEN=your_vercel_token_for_ci_cd
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://table1837tavern.bar,https://table1837-tavern.vercel.app

# Session configuration
SESSION_SECRET=another_secure_random_string_for_sessions

# =============================================================================
# LOGGING & DEBUG
# =============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# Debug mode (development only)
DEBUG=table1837:*

# =============================================================================
# EXAMPLE VALUES FOR DEVELOPMENT
# =============================================================================
# These are safe example values for local development
# NEVER use these in production!

# Example JWT secret (CHANGE THIS!)
# JWT_SECRET=dev_jwt_secret_change_this_in_production_minimum_32_chars

# Example webhook URL (for testing)
# ALERT_WEBHOOK_URL=https://httpbin.org/post

# =============================================================================
# QUICK SETUP CHECKLIST
# =============================================================================
# ☐ 1. Create Supabase project and get URL + keys
# ☐ 2. Generate secure JWT_SECRET (openssl rand -base64 64)
# ☐ 3. Get FluxImagen API key
# ☐ 4. Set up alert webhook (Slack/Discord/etc.)
# ☐ 5. Run database schema: psql -f database/schema.sql
# ☐ 6. Test with: npm run dev
# ☐ 7. Deploy to Vercel with environment variables
